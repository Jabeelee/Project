<body>
	<div class="col-sm-12">
		<div align="center"><h3>캠핑장 리스트</h3></div>
		
		<%-- 상세 페이지 이동을 위한 FORM --%>
		<form name="detailForm" id="detailForm">
		<input type="hidden" name="p_number" id="p_number">
		<input type="hidden" name="p_mainphoto" id="p_mainphoto" value="${data.p_mainphoto}" />
		</form>
		
		<c:choose>		
			<c:when test="${empty productList}">
				<div class="well" style="height: 150px">
				<table>
					<tr>
						<td>	
						<font size="15" >등록된 상품이 없습니다.</font>
						</td>
					</tr>
				</table>
				</div>
			</c:when>
			<c:otherwise>
				<c:forEach items="${productList}" var="product">
					<div class="well" style="height: 150px">
						<div class="col-sm-4">
							<c:if test="${product.p_type} == '오토'">
								<img class="col-sm-12" src="/resources/images/common/1.jpg">
							</c:if>
							<c:if test="${product.p_type} == '글램핑'">
								<img class="col-sm-12" src="/resources/images/common/2.jpg">
							</c:if>
							<c:if test="${product.p_type} == '차박'">
								<img class="col-sm-12" src="/resources/images/common/3.jpg">
							</c:if>
						</div>
						<div class="col-sm-8">
							<div class="col-sm-12">
							<table>
								<tr>
									<td align="center">${product.p_number}</td>
								</tr>
								<tr>
									<td align="center">${product.p_type}</td>
								</tr>
								<tr>
									<td class="goDetail" align="center">${product.p_name}</td>
								</tr>						
							</table>
							</div>
						</div>
					</div>
				</c:forEach>
			</c:otherwise>
		</c:choose>
	</div>
</body>
