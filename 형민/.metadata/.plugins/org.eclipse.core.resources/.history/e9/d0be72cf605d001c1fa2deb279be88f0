<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">

<script type="text/javascript">
	function userLoing() {

		var id = document.getElementById("login_id");
		var pw = document.getElementById("login_pw");

		/*===============아이디 유효성===============*/
		if (id.value == '') {
			alert("아이디를 입력해주세요.");
			id.focus();
			return false;
		}

		/*===============비밀번호 유효성===============*/

		if (pw.value == '') {
			alert("비밀번호를 입력해주세요.");
			id.focus();
			return false;
		}

	}
</script>

<title>로그인 화면</title>
</head>
<body>
	<h2>로그인</h2>
	<form id="loginForm">
		<div>
			<label id="login_id"> 아이디</label> <input type="text" id="login_id"
				name="login_id" placeholder="아이디">
		</div>
		<p></p>

		<div>
			<label id="login_pw"> 비밀번호</label> <input type="password"
				id="login_id" name="login_id" placeholder="비밀번호">
		</div>
		
		<div>
			<input type="submit" value="로그인"/>
		</div>
		<p></p>

		<div>
			<div>
				<input type="button" value="아이디 찾기" />
				<input type="button" value="비밀번호 찾기" />
				<input type="button" value="회원가입" onClick="location.href='joinForm.do'" />
				
			</div>
		</div>


	</form>
</body>
