/**
 * 
 */


function joinForm() {
	location.href = "/login/joinForm.do"	//실행 코드

}

$(function() {

	/* 회원가입 버튼 클릭 처리 이벤트*/
	$("#joinFormBtn").click(function() {	//함수 정의
		location.href = "/login/joinForm.do"	//실행 코드
	});

});

$(document).ready(function() {
		$("#LoginBtn").click(function() {
			// 테크.val() : 태그에 입력된 값
			// 테크.val("값") : 태그의 값을 변경
			var m_id = $("#m_id").val();
			var m_pw = $("#m_pw").val();
			if (m_id == "") {
				alert("아이디를 입력하세요");
				$("#m_id").focus(); //입력포커스 이동
				return; //함수 종료
			}
			if (m_pw == "") {
				alert("비밀번호를 입력하세요");
				$("#m_pw").focus(); //입력포커스 이동
				return; //함수 종료
			}

			//폼 내부의 데이터를 전송할 주소
			document.form1.action = "${path}/login/loginCheck.do"
			//제출
			document.form1.submit();
		});
	});