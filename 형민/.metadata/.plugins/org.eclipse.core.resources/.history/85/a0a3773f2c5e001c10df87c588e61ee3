package com.camflex.client.login.dao;

import javax.inject.Inject;

import org.apache.ibatis.session.SqlSession;
import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.camflex.client.login.vo.LoginVO;

@Repository // 현재 클래스를 스프링에서 관리하는 DAO bean으로 등록
public class LoginDAOImpl implements LoginDAO {
	// SqlSession 객체를 스프링에서 생성하여 주입

	@Inject
	SqlSession sqlSession; // mybatis 실행 객체


	public void insertMember(LoginVO vo)  {
		sqlSession.insert("LoginDAO.insertMember", vo);
	}

	public LoginVO idCheck(String m_id) {
		LoginVO Check = sqlSession.selectOne("LoginDAO.idCheck", m_id);
	}

}
