<script type="text/javascript">
$(function(){
	$("#updateNoticeBtn").click(function(){
		$("#noticeDetailForm").attr({
			"method":"post",
			"action":"/admin/notice/updateNotice"
		});	
		$("#noticeDetailForm").submit();
	});
	
	$("#noticeListBtn").click(function(){
		location.href="/admin/notice/noticeList";
	});
});
</script>
