				</tr>
				<tr>
					<td>글 내용</td>
					<td><textarea name="n_content" id="n_content" readonly="readonly">${detail.n_content}</textarea></td>
				</tr>
				<tr>
					<td>이미지</td>
					<td><input type="file" name="file" id="file" value="${detail.n_photo}" readonly="readonly"></td>
				</tr>
			</table>
		</form>
