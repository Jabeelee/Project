<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camflex.admin.member.dao.AdminMemberDAO">
	<!-- 검색 조건울 나타내는 쿼리 조각 -->
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 'n'.toString()">
				and m_name like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="searchType == 'd'.toString()">
				and m_date like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="searchType == 'nd'.toString()">
				and (m_name like concat('%', concat(#{keyword}, '%'))
				or m_date like concat('%', concat(#{keyword}, '%')))
			</if>
		</if>
	</sql>
	<sql id="total_list">
		<if test="searchType == null">
			AND rnum between #{sizePerPage} * #{page} - 9 AND #{sizePerPage} * #{page}
		</if>
	</sql>
	<!-- 회원 리스트(마스킹 처리) -->
	<select id="memberList" parameterType="member" resultType="member">
		<![CDATA[
		SELECT 
		m_id,
		REGEXP_REPLACE(m_name, '.', '*', 2, 1)as m_name,
		REGEXP_REPLACE(m_phone, '(\d{3})(\d{3,4})(\d{4})', '\1-****-\3')as m_phone,
		m_date
		FROM (SELECT m_id,
						m_name,
						m_phone,
						m_date,
						rownum as rnum
				FROM member_tbl) 
		WHERE rnum between #{sizePerPage} * #{page} - 9 and #{sizePerPage} * #{page}
		]]>
		<include refid="total_list"></include>
		<include refid="search"></include>
		<![CDATA[
		ORDER BY m_date asc
		]]>
	</select>
	
	<!-- 회원 전체 명수를 조회한다. -->
	<select id="count" resultType="int">
		<![CDATA[
		SELECT count(m_id)
		FROM member_tbl
		]]>
		<include refid="search"></include>
	</select>
</mapper>